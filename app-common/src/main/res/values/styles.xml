<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customDialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="commonBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/commonBottomSheetStyle</item>
    </style>

    <style name="commonBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="T17_T17B_600" parent="T17">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="T17">
        <item name="android:textColor">@color/on_surface_high_emphasis</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
