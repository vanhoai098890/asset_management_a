<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myEditTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_text_input_box_stroke</item>
        <item name="android:textColorHint">@color/textHintColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="myEditTextLayoutSignUp" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_text_input_box_stroke_sign_up</item>
        <item name="android:textColorHint">@color/catskillWhite</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/catskillWhite</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="myEditTextEditProfile" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="myCustomEditText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="commonButtonAuthFlowCircle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonButtonCornerMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_selector_button_common_auth</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonButtonCornerMainEditProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_selector_button_common_auth</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonButtonCornerSecond">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_rectangle_grey_radius_6dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CheckboxCheckedColorStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorSecondary">@color/textHintColor</item>
    </style>

    <style name="buttonMapStyle">
        <item name="android:background">@drawable/bg_rectangle_green_radius_6dp</item>
    </style>

    <style name="commonBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/commonBottomSheetStyle</item>
    </style>

    <style name="commonBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonButtonAuthFlow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:background">@drawable/selector_common_button_auth_flow</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_text_common_btn_auth_flow</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:backgroundTint">@color/silver</item>
        <item name="boxStrokeColor">@color/silver</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonTextInputEditTextAuthScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackRussian</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonConstraintLayoutAuthScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/babyBlue</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="commonTextInputLayoutAuthScreen">
        <item name="boxStrokeColor">@color/selector_phone_number_text_input_box_stroke</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:backgroundTint">@color/silver</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="radioButtonConditionPasswordSetting" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:clickable">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/selector_radio_button_password_setting</item>
        <item name="android:button">@drawable/bg_radio_button</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RadioButtonCheckedColorStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>
</resources>
