<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutNoResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/ivNoResultId"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_no_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:letterSpacing="0.03"
        android:text="@string/v1_no_found_item"
        android:textAlignment="center"
        android:textColor="@color/dimGray"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="@id/ivNoResultId"
        app:layout_constraintStart_toStartOf="@id/ivNoResultId"
        app:layout_constraintTop_toBottomOf="@id/ivNoResultId" />
</androidx.constraintlayout.widget.ConstraintLayout>
