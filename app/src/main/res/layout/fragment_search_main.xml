<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/loadingDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:letterSpacing="0.01"
            android:padding="@dimen/_5dp"
            android:textColor="@color/blackRussian"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hi, Hoai Van" />

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:background="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintBottom_toBottomOf="@id/tvUserName"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvUserName"
            tools:ignore="ContentDescription"
            tools:src="@drawable/avatar1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutParentChart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            android:layout_margin="@dimen/_16dp"
            android:background="@drawable/bg_common_dialog_round_16dp"
            android:backgroundTint="@color/bg_chart_color"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintTop_toBottomOf="@id/tvUserName">


            <TextView
                android:id="@+id/tvTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16dp"
                android:text="@string/total_depreciation"
                android:textColor="@color/txt_background"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.assetmanagementapp.ui.searchmain.chart.CustomTextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                app:layout_constraintStart_toStartOf="@id/tvTotalTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTotalTitle"
                tools:text="100.000.000.000 VND" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_8dp"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTotal"
                tools:listitem="@layout/layout_item_bar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvAssetInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/asset_information"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/layoutParentChart"
            app:layout_constraintTop_toBottomOf="@id/layoutParentChart" />

        <include
            android:id="@+id/layoutAssetInfo"
            layout="@layout/layout_item_asset_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginVertical="@dimen/_4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAssetInfoTitle" />

        <include
            android:id="@+id/layoutDepartment"
            layout="@layout/layout_item_asset_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginVertical="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutAssetInfo" />

        <include
            android:id="@+id/layoutTotalPrice"
            layout="@layout/layout_item_asset_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginVertical="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutDepartment" />

        <include
            android:id="@+id/layoutCateInfo"
            layout="@layout/layout_item_asset_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginVertical="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutTotalPrice" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCateInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
