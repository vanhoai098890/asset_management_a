<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.example.assetmanagementapp.ui.sign_up.SignUpViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layoutParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.assetmanagementapp.ui.sign_up.CustomBackgroundSignUp
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dawnPink" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.1" />

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/v1_create_account"
                        android:textAlignment="textStart"
                        android:textColor="@color/textGray"
                        android:textSize="36sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/guideline2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.25" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutName"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:hint="@string/v1_name"
                        app:layout_constraintTop_toBottomOf="@id/guideline3">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtName"
                            style="@style/myCustomEditText"
                            textChangedListener="@{data.nameWatcherImpl}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibClearName"
                        goneUnless="@{data.name.length()!=0}"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_clear_icon"
                        app:layout_constraintBottom_toBottomOf="@id/layoutName"
                        app:layout_constraintRight_toRightOf="@id/layoutName"
                        app:layout_constraintTop_toTopOf="@id/layoutName"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEmail"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_email"
                        app:layout_constraintTop_toBottomOf="@id/layoutName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtEmail"
                            style="@style/myCustomEditText"
                            textChangedListener="@{data.emailWatcherImpl}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibClearEmail"
                        goneUnless="@{data.email.length()!=0}"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_clear_icon"
                        app:layout_constraintBottom_toBottomOf="@id/layoutEmail"
                        app:layout_constraintRight_toRightOf="@id/layoutEmail"
                        app:layout_constraintTop_toTopOf="@id/layoutEmail"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCitizenId"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_citizen_id"
                        app:layout_constraintTop_toBottomOf="@id/layoutEmail">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCitizenId"
                            style="@style/myCustomEditText"
                            textChangedListener="@{data.citizenIdImpl}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibClearCitizenId"
                        goneUnless="@{data.citizenId.length()!=0}"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_clear_icon"
                        app:layout_constraintBottom_toBottomOf="@id/layoutCitizenId"
                        app:layout_constraintRight_toRightOf="@id/layoutCitizenId"
                        app:layout_constraintTop_toTopOf="@id/layoutCitizenId"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutAddress"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_address"
                        app:layout_constraintTop_toBottomOf="@id/layoutCitizenId">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtAddress"
                            style="@style/myCustomEditText"
                            textChangedListener="@{data.stateAddressImpl}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibClearAddress"
                        goneUnless="@{data.stateAddress.length()!=0}"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_clear_icon"
                        app:layout_constraintBottom_toBottomOf="@id/layoutAddress"
                        app:layout_constraintRight_toRightOf="@id/layoutAddress"
                        app:layout_constraintTop_toTopOf="@id/layoutAddress"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBirthday"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_date_of_birth"
                        app:layout_constraintTop_toBottomOf="@id/layoutAddress">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtBirthday"
                            style="@style/myCustomEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivBirthday"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:src="@drawable/ic_calendar_24"
                        app:layout_constraintBottom_toBottomOf="@id/layoutBirthday"
                        app:layout_constraintRight_toRightOf="@id/layoutBirthday"
                        app:layout_constraintTop_toTopOf="@id/layoutBirthday"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCity"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_city"
                        app:layout_constraintTop_toBottomOf="@id/layoutBirthday">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCity"
                            style="@style/myCustomEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ibClearCity"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="@id/layoutCity"
                        app:layout_constraintRight_toRightOf="@id/layoutCity"
                        app:layout_constraintTop_toTopOf="@id/layoutCity"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCountry"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_country"
                        app:layout_constraintTop_toBottomOf="@id/layoutCity">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCountry"
                            style="@style/myCustomEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivCountry"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="@id/layoutCountry"
                        app:layout_constraintRight_toRightOf="@id/layoutCountry"
                        app:layout_constraintTop_toTopOf="@id/layoutCountry"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutMajor"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_major"
                        app:layout_constraintTop_toBottomOf="@id/layoutCountry">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtMajor"
                            style="@style/myCustomEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivMajor"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="@id/layoutMajor"
                        app:layout_constraintRight_toRightOf="@id/layoutMajor"
                        app:layout_constraintTop_toTopOf="@id/layoutMajor"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutRole"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_role"
                        app:layout_constraintTop_toBottomOf="@id/layoutMajor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtRole"
                            style="@style/myCustomEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:maxLength="24"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivRole"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="@id/layoutRole"
                        app:layout_constraintRight_toRightOf="@id/layoutRole"
                        app:layout_constraintTop_toTopOf="@id/layoutRole"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPhone"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_phone"
                        app:layout_constraintTop_toBottomOf="@id/layoutRole">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPhone"
                            style="@style/myCustomEditText"
                            textChangedListener="@{data.phoneWatcherImpl}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibClearPhone"
                        goneUnless="@{data.phone.length()!=0}"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_clear_icon"
                        app:layout_constraintBottom_toBottomOf="@id/layoutPhone"
                        app:layout_constraintRight_toRightOf="@id/layoutPhone"
                        app:layout_constraintTop_toTopOf="@id/layoutPhone"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPassword"
                        style="@style/myEditTextLayoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/v1_password"
                        app:layout_constraintTop_toBottomOf="@id/layoutPhone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPassword"
                            style="@style/myCustomEditText"
                            textChangedListener="@{data.passwordWatcherImpl}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="4dp"
                            android:paddingEnd="68dp"
                            android:textColor="@color/twilightBlue"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvError"
                        displayErrorMessageSignUp="@{data.isShowError()}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/alizarinCrimson"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/layoutPassword"
                        app:layout_constraintStart_toStartOf="@id/layoutPassword"
                        app:layout_constraintTop_toBottomOf="@id/layoutPassword" />

                    <ImageButton
                        android:id="@+id/ibClearPassword"
                        goneUnless="@{data.password.length()!=0}"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_clear_icon"
                        app:layout_constraintBottom_toBottomOf="@id/layoutPassword"
                        app:layout_constraintRight_toLeftOf="@id/ibTogglePassword"
                        app:layout_constraintTop_toTopOf="@id/layoutPassword"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibTogglePassword"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_button_circle"
                        android:src="@drawable/ic_password_toggle_invisible"
                        app:layout_constraintBottom_toBottomOf="@id/layoutPassword"
                        app:layout_constraintRight_toRightOf="@id/layoutPassword"
                        app:layout_constraintTop_toTopOf="@id/layoutPassword"
                        app:tint="@color/twilightBlue"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/v1_create"
                        android:textColor="@color/twilightBlue"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="@id/tvWelcome"
                        app:layout_constraintTop_toBottomOf="@id/layoutPassword" />

                    <ImageButton
                        android:id="@+id/btnSignUp"
                        style="@style/commonButtonAuthFlowCircle"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_button_sign_in"
                        android:onClick="@{()->data.signUpAction()}"
                        android:src="@drawable/ic_baseline_arrow_forward_24"
                        app:layout_constraintBottom_toBottomOf="@id/tvSignUp"
                        app:layout_constraintEnd_toEndOf="@id/layoutPassword"
                        app:layout_constraintTop_toTopOf="@id/tvSignUp"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:layout_constraintTop_toBottomOf="@id/btnSignUp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
