<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="32dp"
    android:background="@drawable/bg_common_dialog_round_16dp"
    android:paddingBottom="@dimen/_32dp">

    <TextView
        android:id="@+id/tvTitleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="@dimen/_16dp"
        android:text="@string/edit_asset"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16dp"
        android:src="@drawable/ic_close_ripple"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleDialog"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutRoom"
        style="@style/myEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/_32dp"
        android:hint="@string/v1_room"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDialog">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionDone"
            android:maxLength="24"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="40dp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toBottomOf="@id/layoutRoom"
        app:layout_constraintEnd_toEndOf="@id/layoutRoom"
        app:layout_constraintTop_toTopOf="@id/layoutRoom"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutStatus"
        style="@style/myEditTextEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/_8dp"
        android:hint="@string/status_type"
        app:layout_constraintTop_toBottomOf="@id/layoutRoom">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionDone"
            android:maxLength="24"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="40dp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toBottomOf="@id/layoutStatus"
        app:layout_constraintEnd_toEndOf="@id/layoutStatus"
        app:layout_constraintTop_toTopOf="@id/layoutStatus"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:id="@+id/btnSection"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutStatus">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/commonButtonAuthFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/v1_submit"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
